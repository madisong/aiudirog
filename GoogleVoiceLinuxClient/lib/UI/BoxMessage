import wx

class BoxMessage(wx.Panel):
    def __init__(self, parent, NAME, MSG, *args, **kws):
        wx.Panel.__init__(self, parent, id=wx.ID_ANY)
        hbox = wx.BoxSizer(wx.HORIZONTAL)
        vbox = wx.BoxSizer(wx.VERTICAL)

        self.name = wx.StaticText(self, -1, NAME)
        self.msg = wx.StaticText(self, -1, MSG)
        NameFont = wx.Font(14, wx.DECORATIVE, wx.BOLD, wx.NORMAL)
        self.name.SetFont(NameFont)

        vbox.Add(self.name, 0, wx.EXPAND|wx.ALL, 5)
        vbox.Add(self.vbox, 0, wx.EXPAND|wx.ALL, 5)
        hbox.Add(vbox, 0, wx.EXPAND|wx.ALL, 5)
        self.SetSizer(hbox)
        self.Fit()

    def ChangeName(NAME):
        self.name.SetLabel(NAME)
    
    def ChangeMsg(MSG):
        self.name.SetLabel(MSG)
